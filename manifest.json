{
  "manifest_version": 3,
  "name": "Spotify Highlight",
  "version": "1.0",
  "description": "Highlight artists and bands to add them to Spotify",
  "icons": {
    "16": "images/magic16.png",
    "32": "images/magic32.png",
    "48": "images/magic48.png",
    "128": "images/magic128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["http://localhost:3000/", "activeTab", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
